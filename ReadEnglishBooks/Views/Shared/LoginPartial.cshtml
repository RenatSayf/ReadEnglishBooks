@using Microsoft.AspNetCore.Identity
@using ReadEnglishBooks.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    @*<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm"></form>*@

    <div class="nav navbar-nav btn-group text-center" style="float:none;">
        <div class="dropdown">
            <a href="#" data-toggle="dropdown" class="btn dropdown-toggle text-center">
                Пользователь:  @UserManager.GetUserName(User)
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">Выход</a>
                </li>
                @*<li>
                    <a href="/Account/Logout">Выход</a>
                </li>*@
            </ul>
        </div>
    </div>
}
else
{
    <ul class="nav navbar-nav">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Вход</a></li>
    </ul>
}

