@{
//ViewData["Title"] = ViewBag.title;
}

<audio id="audio" controls></audio>

<div id="play-panel" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 id="eng-word" class="learn-word">English</h1>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-4 col-sm-4 col-md-4 text-center play-panel">
                        <a id="btn-back" class="btn btn-info" href="#">Назад</a>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 text-center  play-panel" id="div-start">
                        <a id="btn-start" class="btn btn-success" href="#">Старт</a>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 text-center  play-panel" id="div-stop" hidden>
                        <a id="btn-stop" class="btn btn-danger" href="#">Стоп</a>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 text-center  play-panel">
                        <a id="btn-next" class="btn btn-info" href="#">Вперед</a>
                    </div>
                </div>              
            </div>
            <div class="modal-footer">
                <h1 id="rus-word" class="learn-word">Русский</h1>
            </div>
        </div>
    </div>
</div>


<div id="translate-panel" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content  not-transparenr">
            <div class="modal-header">
                <h3 id="eng-word">Преводчик</h3>
            </div>
            <div class="container-fluid">
                <div id="select-text" class="row">
                    
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-xs-12 col-sm-12 col-md-12 text-center play-panel">
                    <a id="btn-translate" class="btn btn-info" href="#">Перевести по словам</a>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="words-panel" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content not-transparenr">
            <div class="modal-header">
                <h3 id="eng-word">Результат перевода</h3>
            </div>
            <div class="container-fluid">
                <table id="words-table" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>English</th>
                            <th>Русский</th>
                        </tr>
                    </thead>
                    <tbody id="words-table">
                        <tr>
                            <td>
                                <input type="text" value="aedffefwefwef" />
                            </td>
                        </tr>
                    </tbody>
                </table> 
                <style>
                    .modal {
                        overflow-y: auto;
                        overflow-x: hidden;
                        height: 100%;
                    }
                </style>
            </div>
            <div class="modal-footer">
                <div class="col-xs-12 col-sm-6 col-md-6 text-center  play-panel" id="div-start">
                    <a id="btn-save" class="btn btn-success" href="#">Сохранить в базу</a>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="container">

    <div id="learning-menu" class="row">
        <div class="col-xs-12 col-md-4 col-lg-4 text-center">
            <a id="btn-learn-all" class="btn btn-success" data-toggle="modal" href="#play-panel">Учить все слова на странице</a>
        </div>
        <div class="col-xs-12 col-md-4 col-lg-4 text-center">
            <a id="btn-learn" class="btn btn-info" data-toggle="modal" href="#play-panel">Учить по предложениям</a>
        </div>
        <div class="col-xs-12 col-md-4 col-lg-4 text-center">
            <a id="btn-learn-select" class="btn btn-warning" href="#play-panel">Учить выбранное</a>
        </div>
        
    </div>

    <h2 id="book-header"></h2>

    <div id="page" class="row">

    </div>

    <div class="row">

        <ul id="pagination-demo" class="pagination-sm"></ul>

    </div>

</div>




